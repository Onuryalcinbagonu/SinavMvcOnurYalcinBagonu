    <link rel="stylesheet" type="text/css" href="~/Areas/AdminPanel/Content/Input/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/AdminPanel/Content/Input/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/AdminPanel/Content/Input/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/AdminPanel/Content/Input/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/AdminPanel/Content/Input/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/AdminPanel/Content/Input/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-26">
                            Hoş Geldiniz
                        </span>
                        <span class="login100-form-title p-b-48">





                        </span>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })   <br />

                        <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                            <input class="input100" type="email" name="User_Email" required="true" MaxLength="45">
                            <span class="focus-input100" data-placeholder="E-mail"></span>
                            @Html.ValidationMessageFor(model => model.User_Email, "", new { @class = "text-danger" })
                        </div>




                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button type="submit" class="login100-form-btn">
                                    Şifremi Unuttum
                                </button>
                            </div>
                        </div>
                        <div class="text-center p-t-115">
                            <a class="txt2" href="@Url.Action("Index","Users")">
                              Giriş Sayfasına Git
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>


        <div id="dropDownSelect1"></div>
    }
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Areas/AdminPanel/Content/Input/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Areas/AdminPanel/Content/Input/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/AdminPanel/Content/Input/js/main.js"></script>

</body>
</html>




