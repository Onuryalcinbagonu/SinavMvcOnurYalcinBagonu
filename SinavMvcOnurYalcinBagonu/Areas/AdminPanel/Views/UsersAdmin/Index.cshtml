@model IEnumerable<SinavMvcOnurYalcinBagonu.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
   
}


<div class="panel panel-warning" data-widget="{&quot;draggable&quot;: &quot;false&quot;}" data-widget-static="">
    <div class="panel-heading">

        <button type="button" class="btn btn_5 btn-lg btn-warning warning_11">Kullanıcılar</button>

        @if (Model.Count() >= 1)
        {
            <button type="button" class="btn btn_5 btn-lg btn-default">
                @Html.ActionLink("Yeni Ekle", "Create")
            </button>
        }


        <div class="panel-ctrls" data-actions-container="" data-action-collapse="{&quot;target&quot;: &quot;.panel-body&quot;}"><span class="button-icon has-bg"><i class="ti ti-angle-down"></i></span></div>
    </div>
    <div class="panel-body no-padding" style="display: block;">
        <table class="table table-striped">
            <thead>
                <tr class="warning">
                    <th>
                        @Html.DisplayNameFor(model => model.User_Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Register_Date)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User_Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Register_Date)
                        </td>
                        <td>



                            @Html.ActionLink("Güncelle", "Edit", new { id = item.UserId }) |
                            @Html.ActionLink("Detay", "Details", new { id = item.UserId }) |
                            @Html.ActionLink("Sil", "Delete", new { id = item.UserId })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>








