@model SinavMvcOnurYalcinBagonu.Models.Home

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ana Sayfa Düzenle</h2>

@using (Html.BeginForm("Edit", "Homes", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ana Sayfa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HomeId)

        <div class="form-group">
            @Html.LabelFor(model => model.LogoImgUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (!String.IsNullOrEmpty(Model.LogoImgUrl))
                {
                    <a href=" @Url.Action("RemoveImage", "Homes",new {id= Model.HomeId})" class="btn btn-danger">Resmi Kaldır</a><br />

                    <img src="@Model.LogoImgUrl" width="100" height="100" />
                }
                else
                { <input type="file" name="file" accept=".jpg,.png,.jpeg" />
                }

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionOneTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DescriptionOneTitle, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.DescriptionOneTitle, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionOne, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DescriptionOne, "", new { @class = "text-danger" })
                <textarea id="editor1" name="editor1">@Model.DescriptionOne</textarea>
                <script type="text/javascript">CKEDITOR.replace("editor1");</script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionTwoTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DescriptionTwoTitle, "", new { @class = "text-danger" })
                @Html.EditorFor(model => model.DescriptionTwoTitle, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescriptionTwo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.DescriptionTwo, "", new { @class = "text-danger" })
                <textarea id="editor2" name="editor2">@Model.DescriptionTwo</textarea>
                <script type="text/javascript">CKEDITOR.replace("editor2");</script>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Gel", "Index")
</div>
