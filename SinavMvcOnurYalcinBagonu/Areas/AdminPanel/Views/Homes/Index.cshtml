@model IEnumerable<SinavMvcOnurYalcinBagonu.Models.Home>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}





<div class="panel panel-warning" data-widget="{&quot;draggable&quot;: &quot;false&quot;}" data-widget-static="">
    <div class="panel-heading">

        <button type="button" class="btn btn_5 btn-lg btn-warning warning_11">Ana Sayfa</button>

        @if (Model.Count() < 1)
        {
            <button type="button" class="btn btn_5 btn-lg btn-default">
                @Html.ActionLink("Yeni Ekle", "Create")
            </button>
        }


        <div class="panel-ctrls" data-actions-container="" data-action-collapse="{&quot;target&quot;: &quot;.panel-body&quot;}"><span class="button-icon has-bg"><i class="ti ti-angle-down"></i></span></div>
    </div>
    <div class="panel-body no-padding" style="display: block;">
        <table class="table table-striped">
            <thead>
                <tr class="warning">
                    <th>
                        @Html.DisplayNameFor(model => model.LogoImgUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescriptionOneTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescriptionOne)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescriptionTwoTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescriptionTwo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="@item.LogoImgUrl" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionOneTitle)
                    </td>
                    <td class="col-md-3">
                        @Html.Raw(item.DescriptionOne.Replace("<br/>", Environment.NewLine))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionTwoTitle)
                    </td>
                    <td class="col-md-3">
                        @Html.Raw(item.DescriptionTwo.Replace("<br/>", Environment.NewLine))
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.HomeId }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.HomeId }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.HomeId })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>






